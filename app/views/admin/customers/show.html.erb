<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>会員情報</h2>
      <table class='table'>
        <tr><%= image_tag @customer.get_profile_image, size:'100x100' %></tr>
        <tr>
          <th>
            name
          </th>
          <th>
            <%= @customer.name %>
          </th>
          <th>

          </th>
        </tr>
      </table>
    </div>
    <div class='col-md-8 offset-md-1'>
      <table class="table">
        <thead>
          <tr>
            <th>チーム名</th>
            <th>人数</th>
            <th>拠点</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post.team_name,post_path(post) %>
              </td>
              <td><%= post.personnom %></td>
              <td><%= post.base %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>