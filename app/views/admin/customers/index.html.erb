<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-10">
      <table class='table'>
        <thead>
          <tr>
            <th>画像</th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <%#会員が設定した画像%>
              <td><%= image_tag customer.get_profile_image, size: '50x50' %></td>
              <%#会員の名前%>
              <td><%= customer.name %></td>
              <td>フォロー数: <%= customer.followings.count %></td>
              <td>フォロワー数: <%= customer.followers.count %></td>
              <td><%= link_to 'Show', admin_customer_path(customer.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>