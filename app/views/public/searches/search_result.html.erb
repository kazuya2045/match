<div class="container">
  <h2>検索結果</h2>
  <table class="table table-hover table-inverse">
    <%#検索対象モデルがCustomerの時%>
    <% if @range == "Customer" %>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= link_to 'Show', customer %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <%#検索対象モデルがCustomerではない時(= 検索対象モデルがPostの時)%>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.team_name %></td>
            <td><%= post.personnom %></td>
            <td><%= post.base %></td>
            <td>
              <p><%= link_to "チーム詳細", post_path(post.id) %></p>
            </td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>